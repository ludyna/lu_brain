	static void lu_s_rec_rg_layers_init(Lu_S_Rec_Rg self)
	{
		lu_user_assert_void(self, "Lu_S_Rec_Rg is NULL");
		lu_user_assert_void(self->data_layers, "self->data_layers is NULL");
		lu_user_assert_void(self->block_layers, "self->block_layers is NULL");
		lu_assert(self->cell_mem);

		lu_size w = self->cells_w;
		lu_size h = self->cells_h;
		lu_size d = self->cells_d;
		lu_size ix = 0;

		Lu_S_Layer layer 	= &self->data_layers[ix];

		// Components
		layer = lu_s_layer_base_init(layer, self, LU_SLT_COMPONENTS, ix, w, h, d);
		lu_user_assert_void(layer, "Cannot init component layer");
		lu_s_cell_mem_cell_3_size_inc(self->cell_mem, lu_s_layer_cells_size(layer));

		++ix;
		d = 1;

		// Cells 
		layer 	= &self->data_layers[ix];

		layer = lu_s_layer_base_init(layer, self, LU_SLT_PIXELS, ix, w, h, d);
		lu_user_assert_void(layer, "Cannot init cell layer");
		lu_s_cell_mem_cell_2_size_inc(self->cell_mem, lu_s_layer_cells_size(layer));

		// Datum
		--w;
		--h;
		++ix;

		while (w > 0 && h > 0)
		{
			lu_user_assert_void(ix < self->data_layers_size, "Index error");

			layer = &self->data_layers[ix];

			layer = lu_s_layer_base_init(layer, self, LU_SLT_PYRAS, ix, w, h, d);
			lu_user_assert_void(layer, "Cannot init pyra layer");
			lu_s_cell_mem_cell_2_size_inc(self->cell_mem, lu_s_layer_cells_size(layer));

			if (w > 0) --w;
			if (h > 0) --h;
			++ix; 
		}

		// Blocks
		ix = 0;
		w = self->block_layers_size;
		h = 1;
		d = 1;

		while(w > 0)
		{
			lu_user_assert_void(ix < self->block_layers_size, "Wrong layer index");

			layer = &self->block_layers[ix];

			layer = lu_s_layer_base_init(layer, self, LU_SLT_BLOCKS, ix, 1, h, d);
			lu_user_assert_void(layer, "Cannot init layer");
			lu_s_cell_mem_cell_1_size_inc(self->cell_mem, lu_s_layer_cells_size(layer));

			++ix;
			--w;
		}
	}

	static void lu_s_rec_rg_layers_deinit(Lu_S_Rec_Rg self)
	{
		lu_user_assert_void(self, "Lu_S_Rec_Rg is NULL");

		Lu_S_Layer layer;
		for (lu_size i = 0; i < self->data_layers_size; i++)
		{
			layer 	= &self->data_layers[i];
			lu_s_layer_base_deinit(layer);
		}

		for (lu_size i = 0; i < self->block_layers_size; i++)
		{
			layer = &self->block_layers[i];
			lu_s_layer_base_deinit(layer);
		}
	}

	static void lu_s_rec_rg_components_init(Lu_S_Rec_Rg self)
	{
		lu_user_assert_void(self, "Lu_S_Rec_Rg is NULL");
		lu_user_assert_void(self->data_layers, "self->data_layers is NULL");

		if (self->data_layers_size > 0)
			lu_s_layer_component_cells_init(&self->data_layers[0]);
	}

	static void lu_s_rec_rg_components_deinit(Lu_S_Rec_Rg self)
	{
		lu_user_assert_void(self, "Lu_S_Rec_Rg is NULL");

		lu_s_layer_component_cells_deinit(&self->data_layers[0]);
	}

	static void lu_s_rec_rg_pixels_init(Lu_S_Rec_Rg self)
	{
		lu_user_assert_void(self, "Lu_S_Rec_Rg is NULL");
		lu_user_assert_void(self->data_layers, "self->data_layers is NULL");

		Lu_S_Layer layer 		= &self->data_layers[1];
		Lu_S_Layer b_layer 	= &self->data_layers[0];

		lu_s_layer_pixel_cells_init(layer, b_layer);
	}

	static void lu_s_rec_rg_pixels_deinit(Lu_S_Rec_Rg self)
	{
		lu_user_assert_void(self, "Lu_S_Rec_Rg is NULL");
	
		if (self->data_layers_size > 1)
			lu_s_layer_pixel_cells_deinit(&self->data_layers[1]);
	}

	static void lu_s_rec_rg_pyras_init(Lu_S_Rec_Rg self)
	{
		lu_user_assert_void(self, "Lu_S_Rec_Rg is NULL");

		Lu_S_Layer layer;
		Lu_S_Layer b_layer = NULL;

		for(lu_size ix = 2; ix < self->data_layers_size; ix++)
		{
			layer 		= &self->data_layers[ix];
			b_layer 	= &self->data_layers[ix - 1];

			lu_s_layer_pyra_cells_init(layer, b_layer);
		}
	}

	static void lu_s_rec_rg_pyras_deinit(Lu_S_Rec_Rg self)
	{
		lu_user_assert_void(self, "Lu_S_Rec_Rg is NULL");

		for(lu_size i = 0; i < self->data_layers_size; i++)
		{
			lu_s_layer_pyra_cells_deinit(&self->data_layers[i]);
		}
	}

	static void lu_s_rec_rg_blocks_init(Lu_S_Rec_Rg self)
	{
		lu_user_assert_void(self, "Lu_S_Rec_Rg is NULL");

		Lu_S_Layer layer;
		Lu_S_Layer b_layer = NULL;
		lu_size ix;

		for(ix = 0; ix < self->block_layers_size; ix++)
		{
			layer = &self->block_layers[ix];

			if (ix > 0)
			{
				b_layer = &self->block_layers[ix - 1];
			}
			else
			{
				// last layer from data layers
				b_layer = &self->data_layers[self->data_layers_size - 1];
			}

			lu_s_layer_block_cells_init(layer, b_layer);
		}
	}

	static void lu_s_rec_rg_blocks_deinit(Lu_S_Rec_Rg self)
	{
		lu_user_assert_void(self, "Lu_S_Rec_Rg is NULL");

		for(lu_size i = 0; i < self->block_layers_size; i++)
		{
			lu_s_layer_block_cells_deinit(&self->block_layers[i]);
		}
	}