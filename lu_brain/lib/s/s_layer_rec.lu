		lu_size src_start_x;
		lu_size src_start_y;
		lu_size src_start_z;

		lu_size src_end_x;
		lu_size src_end_y;
		lu_size src_end_z;

		lu_size src_x;
		lu_size src_y;

		lu_long dest_x; 
		lu_long dest_y;

		lu_long dest_start_x;
		lu_long dest_start_y;

		lu_size wave_ix;
		enum lu_wave_type wave_type;
		Lu_Data data;
		enum lu_w_rec_state state;
		Lu_W_Table curr_w_table;
		Lu_N_Table curr_n_table;

		Lu_W_Processor processor;

		Lu_W_Cell_P* children;
		lu_size children_count;
		Lu_W_Cell w_cell;
	};

