	static void lu_s__print_info(Lu_S self)
	{
		lu__assert(self);

		Lu_S_Area area;
		lu__debug("\nLu_S Areas: ");
		char buffer[50];
		for (lu_size i = LU_N_CELL__SPEIAL_CELLS_SKIP; i < self->areas_count; i++)
		{
			area = self->areas[i];

			if (area == NULL) break;

			lu_s_area__print_info(area);
		}

	}


	static void lu_s__save_rec_data(Lu_S self, Lu_Wave wave, lu_size rec_id, Lu_Data data, Lu_Process_Config config)
	{
		lu__assert(self);
		Lu_S_Layer_Rec frame = lu_s__get_v_rec(self, rec_id);
		lu__assert(frame);

		// Lu_S_Area area = self->areas[0];

		// lu__assert(area->tag == LU_S_TAG__REC);

		lu_s_layer_rec__save(frame, wave, rec_id, data, config);
	}