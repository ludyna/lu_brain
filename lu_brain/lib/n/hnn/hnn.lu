	Hnn_Cell hnn_cell_spawn(Hnn self, lu_byte type)
	{
		lu_assert(self);

		switch(type)
		{
			case HNN_CT_1:
				return hnn_cell_alloc_1(self->cell_allocator);
			case HNN_CT_2:
				return (Hnn_Cell) hnn_cell_2_alloc(self->cell_allocator);
			case HNN_CT_3:
				return (Hnn_Cell) hnn_cell_3_alloc(self->cell_allocator);
			case HNN_CT_4:
				return (Hnn_Cell) hnn_cell_4_alloc(self->cell_allocator);
			default:
				return NULL;
		}

		return NULL;
	}

	void hnn_cell_die(Hnn self, Hnn_Cell cell)
	{
		lu_assert(self);
		lu_assert(cell);

		switch(cell->type)
		{
			case HNN_CT_1:
				hnn_cell_free_1(self->cell_allocator, cell);
				break;
			case HNN_CT_2:
				hnn_cell_2_free(self->cell_allocator, (Hnn_Cell_2) cell);
				break;
			case HNN_CT_3:
				hnn_cell_3_free(self->cell_allocator, (Hnn_Cell_3) cell);
				break;
			case HNN_CT_4:
				hnn_cell_4_free(self->cell_allocator, (Hnn_Cell_4) cell);
				break;
			default:
				lu_assert(false);
		}
	}
// 
	static inline lu_size hash_comb(lu_size seed, lu_size value)
	{
	    seed ^= value + 0x9e3779b9 + (seed<<6) + (seed>>2);
	    return seed;
	}

	// cell_1

	Hnn_Cell hnn_cell_get(Hnn self, Hnn_Cell top_left)
	{
		lu_assert(self);
		lu_assert(top_left);
		lu_assert(self->links);
		lu_assert(self->cell_allocator);

		lu_size hash = 0;
		hash = hash_comb(hash, hnn_cell_shift(self->cell_allocator, top_left));

		return hnn_links_cell_get_1(self->links, top_left, hash);
	}

	Hnn_Cell hnn_spawn_connect(Hnn self, Hnn_Cell top_left)
	{
		lu_assert(self);
		lu_assert(self->cell_allocator);
		lu_assert(self->links);
		lu_assert(top_left);

		lu_size hash = 0;
		hash = hash_comb(hash, hnn_cell_shift(self->cell_allocator, top_left));

		Hnn_Cell cell = hnn_cell_alloc_1(self->cell_allocator);

		Hnn_Table_Node node = hnn_links_cell_add_1(self->links, cell, hash);
		lu_assert(node);

		return node->cell;
	}

