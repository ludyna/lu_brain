///////////////////////////////////////////////////////////////////////////////
// Lu_Brain_Config predefined 

	struct lu_brain_config lu_g_bc_predefined[LU_BRAIN_CONFIG_END] = {
		{
			// LU_BC_DEFAULT
			.id							= 0,					
			.recs_size					= 16, 
			.max_seq_size_in_blocks 	= 16,

			.net.names_size				= 128,
			.net.size_in_cell_0			= 10000, 
			.net.size_in_cell_1			= 10000,
			.net.size_in_cell_2			= 10000, 
			.net.size_in_cell_3			= 10000, 
			.net.size_in_cell_4			= 10000, 
			.net.n_table_mod			= 2,

			.space.frames_size 			= 256,
			.space.apexes_size 			= 256,
		},
	};		

	struct lu_brain_config lu_brain_config__get_by_id(lu_size id)
	{
		lu__assert(id < LU_BRAIN_CONFIG_END);

		return lu_g_bc_predefined[id];
	}

///////////////////////////////////////////////////////////////////////////////
// Lu_Brain_Config


	Lu_Brain_Config lu_brain_config__validate(Lu_Brain_Config config)
	{
		lu__user_assert(config->recs_size > 0, "recs_size should be greater than 0");
		lu__user_assert(config->net.names_size > 0, "net.names_size should be greater than 0");
		lu__user_assert(config->net.size_in_cell_0 > 0, "net.size_in_cell_0 should be greater than 0");
		lu__user_assert(config->net.size_in_cell_1 > 0, "net.size_in_cell_1 should be greater than 0");
		lu__user_assert(config->net.size_in_cell_2 > 0, "net.size_in_cell_2 should be greater than 0");
		lu__user_assert(config->net.size_in_cell_3 > 0, "net.size_in_cell_3 should be greater than 0");
		lu__user_assert(config->net.size_in_cell_4 > 0, "net.size_in_cell_4 should be greater than 0");
		lu__user_assert(config->net.n_table_mod > 1, "net.n_table_mod should be greater than 1");

		return config;
	}