///////////////////////////////////////////////////////////////////////////////
// Lu_Mem (default)

	lu_p_byte mem_alloc_default(Lu_Mem self, lu_size size, const char* func, const char* file, int line)
	{
		// I am using calloc instead of malloc here for easier debugging 
		// changing to malloc should not change program behavior
		lu_p_byte address = (lu_p_byte) calloc(1, size);

		// Lu_Mem specific debug here
		#ifdef LU_DEBUG

			if (self->debugger)
				self->debugger->register_alloc(self->debugger, address, size, func, file, line);

		#endif

		return address;
	}

	lu_p_byte mem_realloc_default(Lu_Mem self, lu_p_byte p, lu_size size_in_bytes, const char* func, const char* file, int line)
	{
		lu_p_byte address = (lu_p_byte) realloc(p, size_in_bytes);

		// Lu_Mem specific debug here
		#ifdef LU_DEBUG

			if (self->debugger)
				self->debugger->register_realloc(self->debugger, address, size_in_bytes, func, file, line);

		#endif

		return address;
	}

	void mem_free_default(Lu_Mem self, lu_p_byte p, const char* func, const char* file, int line)
	{
		free((lu_p_void) p);

		// Lu_Mem specific debug here
		#ifdef LU_DEBUG

			if (self->debugger)
				self->debugger->register_free(self->debugger, p, func, file, line);

		#endif
	}

	void mem_destroy_default(Lu_Mem self, Lu_Mem parent_mem, const char* func, const char* file, int line)
	{
		// Lu_Mem specific debug here
		free((lu_p_void) self);
	}

	// declaration 
	Lu_Mem_Table mem_table_create_default(
		Lu_Mem 		mem, 
		lu_size 	record_size_in_bytes, 
		lu_size 	table_size_in_records, 
		lu_value 	percent,
		lu_flags 	flags,
		const char* func, 
		const char* file,
		int line
	);

	void mem_table_destory_default(Lu_Mem_Table self);

///////////////////////////////////////////////////////////////////////////////
// Globals

	struct lu_mem g_mem_default_instance = {
		.alloc 				= mem_alloc_default,
		.realloc 			= mem_realloc_default,
		.free 				= mem_free_default,
		.destroy 			= mem_destroy_default,
		.table_create 		= mem_table_create_default,
		.debugger 			= NULL
	};

	Lu_Mem lu_g_mem = &g_mem_default_instance;

///////////////////////////////////////////////////////////////////////////////
// Inits, create and destroy

	Lu_Mem mem_create()
	{
		Lu_Mem self 					= calloc(1, sizeof(struct lu_mem));
		
		self->debugger 				= NULL;
		self->alloc 				= g_mem_default_instance.alloc;
		self->realloc 				= g_mem_default_instance.realloc;
		self->free 					= g_mem_default_instance.free;
		self->destroy 				= g_mem_default_instance.destroy;
		self->table_create 			= g_mem_default_instance.table_create;

		return self;
	}

