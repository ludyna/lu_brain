///////////////////////////////////////////////////////////////////////////////
// Lu_W_Table 


	static Lu_W_Table lu_w_table__create(
		Lu_S_Layer_Base s_layer,
		Lu_Config config, 
		lu_size w, 
		lu_size h,
		lu_size h_max
	)
	{
		lu__assert(s_layer);
		lu__assert(config);
		lu__assert(w > 0);
		lu__assert(h > 0);
		lu__assert(h_max >= h);

		Lu_W_Table self = (Lu_W_Table) lu_mem__alloc(config->w_mem, sizeof(struct lu_w_table));
		lu__alloc_assert(self);

		self->mem = config->w_mem;
		self->s_layer = s_layer;
		
		self->w = w;
		self->h = h;
		self->h_max = h_max;

		if (w == 1 && h == 1)
		{
			self->normal_children_size = 1;
		}
		else if (w == 1 || h == 1)
		{
			self->normal_children_size = 2;
		}
		else
		{
			self->normal_children_size = 4;
		}

		self->wave_id = LU_WAVE_ID__NOT_SET;
		self->block_id = LU_BLOCK_ID__NOT_SET; 

		self->cells = (struct lu_w_save_cell*) lu_mem__alloc(
			config->w_mem, 
			sizeof(struct lu_w_save_cell) * w * h
		);
		lu__alloc_assert(self->cells);

		self->any_fired = false;

		return self;
	}

	static void lu_w_table__destroy(Lu_W_Table self)
	{
		lu__assert(self);
		lu__assert(self->mem);

		lu_mem__free(self->mem, (lu_p_byte) self->cells);
		
		self->cells = NULL;
		
		lu_mem__free(self->mem, (lu_p_byte) self);
	}

